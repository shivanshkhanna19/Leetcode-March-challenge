#include <iostream>
using namespace std;

int main()
{
    int a [] = {0, 1, 2, 3, 4, 5, 6, 7, 10};
    int l = sizeof(a)/sizeof(a[0]);
    
    for(int i = 0; i<l;i++)
    {
        if(a[0] != 0)
        {
            cout<<"value is : "<<0<<endl;  //Base case
            break;
        }
        else if(a[i+1] - a[i] != 1)
        {
            cout<<a[i]+1<<endl;
            break;
        }
        else{
            if(i==l-1)
            cout<<"Base case 2 :"<<a[l-1]+1<<endl;
        }
        
        
    }
    
    

    return 0;
}
